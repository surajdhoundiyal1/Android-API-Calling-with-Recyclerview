<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#008577"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Task2"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_margin="9dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@mipmap/geipl_logo_r"
            android:layout_marginLeft="90dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/machineBarcode"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="Machine Barcode Scan"
        android:gravity="center"
        android:textSize="13sp"
        android:inputType="text"
        android:focusableInTouchMode="true"
        android:background="@drawable/textviewcorner"/>

    <EditText
        android:id="@+id/userBarcode"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="User Barcode Scan"
        android:gravity="center"
        android:textSize="13sp"
        android:inputType="text"
        android:focusableInTouchMode="true"
        android:background="@drawable/textviewcorner"/>

    <EditText
        android:id="@+id/palletBarcode"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="Pallet Barcode Scan"
        android:gravity="center"
        android:textSize="13sp"
        android:inputType="text"
        android:focusableInTouchMode="true"
        android:background="@drawable/textviewcorner"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_box"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncorner"/>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncorner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:onClick="nextButton"
            android:background="@drawable/btncorner"/>

    </LinearLayout>



</LinearLayout>

